<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}"/>
    <link rel="stylesheet" href="{{ '/site.css' | url }}"/>
    <link rel="alternate" type="application/rss+xml" href="/feed.xml" title="Blog Reinier Ladan (NL)"/>
    <link rel="alternate" type="application/rss+xml" href="/feed-en.xml" title="Blog Reinier Ladan (EN)"/>
    <link rel="icon" href="/images/cropped-RL-Icon-32x32.png" sizes="32x32"/>
    <link href="https://carelesswhisper.nl/@reinier" rel="me"/>
    <meta property="og:title" content="{{ title }}"/>
    <meta property="og:url" content="{{ metadata.url }}{{ page.url }}"/>
    {% if description %}
        <meta property="og:description" content="{{ description }}"/>
    {% endif %}
    {% if socialImage %}
        <meta property="og:image" content="{{ socialImage }}"/>
    {% endif %}
</head>
